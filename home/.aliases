#!/bin/bash
#alias NICKNAME='COMMAND'

# color support
alias ls='ls --color=auto'
alias dir='dir --color=auto'
alias vdir='vdir --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias diff='colordiff' #requires colordiff package

# modified commands
alias df='df -h'
alias du='du -h'
alias free='free -h'
alias less='less -i'
alias mkdir='mkdir -pv'
alias ping='ping -c 5'

# shortcuts
alias _="sudo"
alias c='clear'
alias e='exit'
alias ka='killall'
alias x='startx'
alias ra='ranger'
alias db='dropbox'
alias dbp='dropbox puburl'
alias ns='notify-send'
alias nsc='notify-send "Process Completed"'
alias h='history'
alias open='xdg-open'
alias lns='ln -s'
alias ..='cd ..'
alias dua='\du -ha'
alias dus='\du -hs'
alias to="todo.sh"

# new commands
alias lock='xscreensaver-command -lock'
alias xmerge='xrdb ~/.Xresources'
alias pig='ping google.com'
alias help='cat ~/.help'
alias du1='\du -h --max-depth=1 | sort -hr'
alias du2='\du -h --max-depth=2'
alias du3='\du -h --max-depth=3'
alias du1a='\du -ha --max-depth=1 | sort -hr'
alias du2a='\du -ha --max-depth=2'
alias du3a='\du -ha --max-depth=3'
alias openports='netstat --all --numeric --programs --inet --inet6'
#alias pg='ps -Af | grep $1'         # requires an argument (note: /usr/bin/pg is installed by the util-linux package; maybe a different alias name should be used)
alias rbackup="rsync -ah --progress"
alias pcp="rsync --partial --progress --append --rsh=ssh -r -h"
alias pmv="rsync --partial --progress --append --rsh=ssh -r -h --remove-sent-files"
alias grub-update='sudo grub-mkconfig -o /boot/grub/grub.cfg'
alias svn-ignore='svn propedit svn:ignore .'
alias lsmnt="mount | column -t"

# zsh utility commands
alias time-zsh="time zsh -ic exit"
alias source-zsh="source ~/.zshrc"

# privileged access
if [ $UID -ne 0 ]; then
    alias sudo='sudo '
    alias scat='sudo cat'
    alias svim='sudo vim'
    alias root='sudo su'
    alias reboot='sudo reboot'
    alias halt='sudo halt'
    #alias update='sudo pacman -Su'
    #alias netcfg='sudo netcfg2'
fi

# safety features
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -I'
alias ln='ln -i'
alias chown='chown --preserve-root'
alias chmod='chmod --preserve-root'
alias chgrp='chgrp --preserve-root'

# programming languages
alias ja='java'
alias jc='javac'
alias jca='javac *.java'
alias jrm='rm *.class'
alias rb='ruby'
alias py='python3'
alias py2='python2'
alias sbcl='rlwrap --history-no-dupes 1 --histsize 5000 --history-filename $HOME/.rlwrap.d/sbcl_history sbcl'

# git
alias g='git'
alias gst='git status --short'
alias ga='git add'
alias gap='git add -p'
alias gc='git commit -v'
alias gca='git commit -v -a'
alias gd='git diff'
alias gwd='git diff --color-words'
alias gp='git push'
alias gl='git pull'
alias gcl='git clone'
alias gch='git checkout'
alias gb='git branch'
alias glgs='git log --graph --decorate --pretty=oneline --abbrev-commit'
alias glg='glgs --stat'
alias gsh='git show'
alias gshw='git show --color-words'

# vim
alias v='vim -p'
alias va='vim -p *'
alias vh='vim -o'
alias vv='vim -O'
alias vd='vim -d'

# feh
alias feh='feh --scale-down --auto-zoom'

# homesick/homeshick
if command -v homesick &>/dev/null; then
	alias hs='homesick'
else
	alias hs='homeshick'
fi

# ls
alias ls='ls -hF --color=auto --group-directories-first'
alias la='ls -A'
alias ll='ls -lh'
alias l='ls -alh'
alias lr='ls -R'                    # recursive ls
alias lx='ll -BX'                   # sort by extension
alias lz='ll -rS'                   # sort by size
alias lt='ll -rt'                   # sort by date
alias lm='la | less'

# ls++
alias lsp="ls++"
alias lap="ls++ -A"

# systemd
alias sc="systemctl"
alias power-reboot='sudo systemctl reboot'
alias power-off='sudo systemctl poweroff'
alias start='sudo systemctl start'
alias restart='sudo systemctl restart'
alias stop='sudo systemctl stop'
alias enable='sudo systemctl enable'
alias status='sudo systemctl status'
alias disable='sudo systemctl disable'

# pacman/packer
alias pf='packer -Ss'
alias p='sudo pacman-color'
alias pin='p -S'
alias pup='p -Syu'
alias pa='packer --noedit --auronly'
alias pain='pa -S'
alias paup='pa -Syu'

# global aliases
alias -g L='| less'
alias -g F='| ack'
alias -g FE='|& ack'
alias -g LOL='| lolcat'

# personal (private) aliases
if [ -f ~/.aliases_personal ]; then
	. ~/.aliases_personal
fi

# functions
prf() {
	pgrep $1 | xargs ps
}
